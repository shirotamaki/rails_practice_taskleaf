<h1>Tasks#index</h1>
<p><%= link_to '新規登録', new_task_path %></p>

<div>
  <% @tasks.each do |task| %>
  <p>
    <%= link_to task.name, task_path(task) %>
    <%= link_to task.email, task_path(task) %>
    <%= link_to task.description, task_path(task) %>
  </p>
    <%= link_to '編集', edit_task_path(task) %>
    <%= link_to '削除', task, method: :delete %>
  <% end %>
</div>
